
<link href="~/Scripts/JqueryUI/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Scripts/jtable/themes/metro/lightgray/jtable.min.css" rel="stylesheet" />
<!--Adding jquery Plugin-->
<script src="~/Scripts/jquery-ui-1.9.2.min.js"></script>
<!--Adding jTable Plugin-->
<script src="~/Scripts/jtable/jquery.jtable.min.js"></script>
<!-- Import CSS file for validation engine (in Head section of HTML) -->
<link href="~/Scripts/validationEngine/validationEngine.jquery.css" rel="stylesheet" type="text/css" />

<script>
    $(document).ready(function () {
        $('#CategoryTableContainer').jtable({
            title: 'Category',
            paging: true,
            pageSize: 10,
            sorting: true,
            pageSizeChangeArea: false,
            actions:
            {
                listAction: '/Category/GetCategory',
                deleteAction: '/Category/DeleteCategory'
            },
            fields: {
                CategoryId: {
                    key: true,
                    list: false
                },
                CategoryName: {
                    title: 'CategoryName',
                    width: '10%'

                },
                Code: {
                    title: 'Code',
                    width: '5%'
                },
                Status: {
                    title: 'Status',
                    type: 'checkbox',
                    values: { 'false': 'Deactivate', 'true': 'Active' },
                    defaultValue: 'true',
                    width: '5%'
                },
                Edit: {
                    title: 'Action',
                    sorting: false,
                    width: '5%',
                    display: function (data)
                    {
                        return '<a class="btn btn-primary btn-xs" href="../Category/Edit?id=' + data.record.CategoryId + ' ">' + '<i class="glyphicon glyphicon-edit"></i> Edit </a>';
                    }
                }
            }
        });

        //Re-load records when user click 'load records' button.
        $('#BtnSearch').click(function (e) {
            e.preventDefault();
            $('#CategoryTableContainer').jtable('load', {
                CategoryName: $('#CategoryName').val()
            });
        });

        $('#BtnClear').click(function (e) {
            e.preventDefault();
            $('#CategoryName').val('');
            $('#CategoryTableContainer').jtable('load',
                {
                    CategoryName: ''
                });
        });

        //Load Customer data from server
        $('#CategoryTableContainer').jtable('load');
    });

</script>





<div class="col-md-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>All Categories</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <br />
            <form id="form">
                <div class="col-lg-4">
                    <label>Enter CategoryName</label>
                    <input type="text" class="form-control" id="CategoryName" name="CategoryName" />
                </div>
                <div class="col-lg-4" style="margin-top: 25px">
                    <button id="BtnSearch" class="btn btn-round btn-success" type="submit"><i class="glyphicon glyphicon-search"></i> Search</button>
                    <a href="/Categories/Index" class="btn btn-round btn-primary"><i class="glyphicon glyphicon-repeat"></i> Clear</a>
                </div>
            </form>

            <hr />
            <div class="row">
                <div class="col-lg-12"></div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div id="CategoryTableContainer"></div>
                </div>
            </div>
        </div>
    </div>
</div>

